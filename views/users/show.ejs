<h1>User Data for <%= user.name %>
</h1>
<table class="table">
  <tr>
    <th>Name</th>
    <td>
      <%= user.name %>
    </td>
  </tr>
  <tr>
    <th>Email</th>
    <td>
      <%= user.email %>
    </td>
  </tr>
  <tr>
    <th>Role</th>
    <td>
      <%= user.role %>
    </td>
  </tr>
</table>

<div>
  <a href="/users">View all users</a>
</div>
<% if (loggedIn) { %>
  <div>
    <a href="<%=`/users/${user._id}/edit`%>">Edit User
      Details</a>
  </div>
  <% if (currentUser.isAdmin) { %>
    <div>
      <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
    </div>
    <%} %>

      <%} %>