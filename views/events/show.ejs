<h1>Event Data for <%= event.title %>
</h1>
<table class="table">
    <tr>
        <th>Title</th>
        <td>
            <%= event.title %>
        </td>
    </tr>
    <tr>
        <th>Description</th>
        <td>
            <%= event.description %>
        </td>
    </tr>
    <tr>
        <th>Location</th>
        <td>
            <%= event.location %>
        </td>
    </tr>
</table>
<div>
    <a href="/events">View all events</a>
</div>
<% if (loggedIn) { %>
    <div>
        <a href="<%=`/events/${event._id}/edit`%>">Edit Event
            Details</a>
    </div>
    <% if (currentUser.isAdmin) { %>
        <div>
            <a href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
                onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </div>
        <%} %>

            <%} %>